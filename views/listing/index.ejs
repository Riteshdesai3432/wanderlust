<% layout("layouts/boilerplate") %>
<!-- <%= success %> -->
<body>
  <!-- <h1>All Listings</h1> -->
 <style>
  /* Container for horizontal scrolling */
  #filters {
    display: flex;
    overflow-x: auto; /* enable horizontal scrolling */
    white-space: nowrap; /* prevent wrapping */
    padding: 1rem;
    gap: 1.5rem;
    -webkit-overflow-scrolling: touch; /* smooth scrolling on mobile */
    align-items: center;
  }

  /* Hide default scrollbar in modern browsers */
  #filters::-webkit-scrollbar {
    display: none;
  }

  #filter {
    display: inline-block; /* keep items in a row */
    text-align: center;
    opacity: 0.7;
    transition: opacity 0.3s, transform 0.3s;
  }

  #filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: translateY(-3px);
  }

  #filter p {
    font-size: 0.9rem;
    margin-top: 0.3rem;
  }

  .tax-switch {
    display: inline-block;
    text-align: center;
    margin-left: 4rem;
  }

  /* Responsive tweaks (optional) */
  @media (max-width: 768px) {
    #filter p {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    #filter p {
      font-size: 0.75rem;
    }
  }

  .tax-info{
    display: none;
  }

  .tax-switch{
    border: 1px solid black;
    border-radius: 0.5rem;
    height: 3rem;
    padding: 1rem;
    display: flex;
    align-items: center;
  }
</style>

<div id="filters">
  <div id="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountain</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Camping</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-water"></i></div>
    <p>Lake View</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Island</p>
  </div>
  <div id="filter">
    <div><i class="fa-solid fa-hotel"></i></div>
    <p>Luxe</p>
  </div>
  <div class="tax-switch">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
    </div>
  </div>
</div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
    <% for (let listing of allListing) { %>
      <div class="col">
        <div class="card h-100">
          <!-- ✅ Wrap image inside the link -->
          <a href="/listing/<%= listing._id %>" style="text-decoration: none; color: inherit;">
            <img src="<%= listing.image.url %>" 
                 class="card-img-top" 
                 alt="listing_image" 
                 style="height: 20rem; border-radius: 10px;" />
          </a>

          <div class="card-body">
            <p class="card-text">
              <strong><%= listing.title %></strong><br>
              Price: $<%= listing.price %><br>
              Location: <%= listing.location %>, <%= listing.country %>
              <i class="tax-info">&nbsp; &nbsp; +18 GST</i>
            </p>
            <!-- ✅ Keep your View button same -->
            <a href="/listing/<%= listing._id %>" class="btn btn-primary">View</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</body>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");

  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      if (info.style.display !== "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
